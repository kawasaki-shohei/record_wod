<%= form_with model: [wod, log], local: true do |f| %>
  <%= render 'shared/show_object_errors', object: log, object_name: 'log' %>

  <div class="form-group">
    <%= f.label :date, class: 'col-form-label' %>
    <div class="">
      <%= f.date_field :date, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :kind, class: 'col-form-label' %>
    <%= f.select :kind, Log.kinds.keys, {}, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :result, class: 'col-form-label' %>
    <div class="">
      <%= f.text_area :result, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :rate, class: 'col-form-label' %>
    <div class="">
      <%= f.number_field :rate, min: 0.5, max: 5.0, step: 0.5, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :memo, class: 'col-form-label' %>
    <div class="">
      <%= f.text_area :memo, rows: 5, class: 'form-control' %>
    </div>
  </div>

  <%= f.submit '登録する', class: 'btn btn-dark mb-5' %>
<% end %>

<script>
  $('textarea').autosize();
</script>
