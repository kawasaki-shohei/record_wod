<h2>ログ詳細</h2>
<div>
  <h5 class="p-1 bg-dark text-light">WOD名称</h5>
  <div class="mb-5">
    <%= wod.name %>
  </div>

  <h5 class="p-1 bg-dark text-light">日付</h5>
  <div class="mb-5">
    <%= log.date %>
  </div>

  <h5 class="p-1 bg-dark text-light">種別</h5>
  <div class="mb-5">
    <%= log.kind %>
  </div>

  <h5 class="p-1 bg-dark text-light">結果</h5>
  <div class="mb-5">
    <%= simple_format(log.result) %>
  </div>

  <h5 class="p-1 bg-dark text-light">達成度</h5>
  <div class="mb-5">
    <%= log.rate %>
  </div>

  <h5 class="p-1 bg-dark text-light">感想</h5>
  <div class="mb-5">
    <%= simple_format(log.memo) %>
  </div>
</div>

<div class="w-100 mb-5">
  <%= link_to '編集する', edit_wod_log_path(wod, log), class: 'btn btn-secondary' %>
  <%= link_to '削除する', wod_log_path(wod, log),  method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger float-right' %>
</div>

<h2>WOD詳細</h2>
<%= render 'shared/wod_detail', wod: wod %>

<div class="row">
  <div class="col-4">
    <%= link_to 'ログを追加', new_wod_log_path(wod), class: 'btn btn-outline-dark btn-block' %>
  </div>
  <div class="col-4">
    <%= link_to 'WOD詳細', wod_path(wod), class: 'btn btn-secondary btn-block' %>
  </div>
  <div class="col-4">
    <%= link_to 'WOD編集', edit_wod_path(wod), class: 'btn btn-dark btn-block' %>
  </div>
</div>
